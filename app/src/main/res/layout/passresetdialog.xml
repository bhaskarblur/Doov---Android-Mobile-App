<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundbogbg"
    android:backgroundTint="#2E2E2E">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/phetsarath_bold"
        android:letterSpacing="0.02"
        android:text="Forgot Password!"
        android:textColor="@color/seccolor"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/phetsarath_regular"
        android:letterSpacing="0.02"
        android:paddingRight="50dp"
        android:text="Please Enter Your Email To Reset Password."
        android:textAlignment="viewStart"
        android:textColor="#DCDCDC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/resetpassmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/emailboxbg"
        android:backgroundTint="#363535"
        android:ems="10"
        android:fontFamily="@font/phetsarath_regular"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:letterSpacing="0.01"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:textColor="@color/seccolor"
        android:textColorHint="#959595"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/sendbtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/googlebtnbg"
        android:fontFamily="@font/phetsarath_bold"
        android:foreground="?android:selectableItemBackground"
        android:letterSpacing="0.02"
        android:text="Send"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#2E2E2E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetpassmail"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
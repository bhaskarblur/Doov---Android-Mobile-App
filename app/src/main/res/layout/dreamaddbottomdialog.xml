<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Options"
        android:textColor="@color/seccolor"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dreamsetimg"
        android:layout_width="110dp"
        android:layout_height="129dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="9dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/add_img" />

    <EditText
        android:id="@+id/dreamsetname"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/emailboxbg"
        android:backgroundTint="#474747"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#fafafa"
        android:textColorHint="#959595"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dreamsetimg"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dreamsetfield"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/emailboxbg"
        android:backgroundTint="#474747"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Enter Field"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="#fafafa"
        android:textColorHint="#959595"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dreamsetimg"
        app:layout_constraintTop_toBottomOf="@+id/dreamsetname" />

    <Button
        android:id="@+id/dreamsavebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:foreground="?android:selectableItemBackground"
        android:background="@drawable/googlebtnbg"
        android:text="Save"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dreamsetimg" />

    <Button
        android:id="@+id/dreamdeletebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="20dp"
        android:background="#2E2E2E"
        android:foreground="?android:selectableItemBackground"
        android:text="Delete"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F24747"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dreamsavebtn"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
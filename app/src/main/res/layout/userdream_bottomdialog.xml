<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E">

    <ImageView
        android:id="@+id/dialogslider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dialog_slider" />

    <ImageView
        android:id="@+id/dream_sharebtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        app:layout_constraintEnd_toStartOf="@+id/dream_lovebtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sharebtn" />

    <ImageView
        android:id="@+id/dream_lovebtn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/love_nobgicon" />

    <ImageView
        android:id="@+id/dream_notlovebtn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notlove_nobgicon" />

    <ImageView
        android:id="@+id/dreamdialogimg"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogslider" />

    <TextView
        android:id="@+id/dreamdialogname"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="68dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0.02"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/seccolor"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dreamdialogimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dreamdialogfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="#B4B4B4"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dreamdialogimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dreamdialogfield2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/calibiri"
        android:letterSpacing="0.03"
        android:text="• Motivation For You "
        android:textColor="#B7B7B7"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dreamdialogfield4" />

    <TextView
        android:id="@+id/dreamdialogfield4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/calibiri"
        android:letterSpacing="0.03"
        android:text="• Daily To-Do Tasks"
        android:textColor="#B7B7B7"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dreamdialogimg" />

    <TextView
        android:id="@+id/dreamdialogfield3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/calibiri"
        android:letterSpacing="0.03"
        android:text="• Latest News For Your Aim"
        android:textColor="#B7B7B7"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dreamdialogfield4"
        app:layout_constraintTop_toBottomOf="@+id/dreamdialogimg" />

    <TextView
        android:id="@+id/dreamdialogfield5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/calibiri"
        android:letterSpacing="0.03"
        android:text="• Top Learning Platforms And Courses"
        android:textAlignment="viewStart"
        android:textColor="#B7B7B7"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dreamdialogfield2"
        app:layout_constraintTop_toBottomOf="@+id/dreamdialogfield3" />

    <Button
        android:id="@+id/dreamstartbtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"

        android:background="@drawable/googlebtnbg"
        android:fontFamily="@font/poppins_semibold"
        android:foreground="?android:selectableItemBackground"
        android:text="Start"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#2e2e2e"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dreamdialogfield5"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>